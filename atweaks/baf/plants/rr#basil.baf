IF
	!GlobalTimerNotExpired("RR#PGAZE","LOCALS")
	See(SixthNearestEnemyOf(Myself))
	!Race(LastSeenBy(Myself),SLIME)
	!Race(LastSeenBy(Myself),ELEMENTAL)
	!Race(LastSeenBy(Myself),GOLEM)
	!General(LastSeenBy(Myself),UNDEAD)
	!StateCheck(LastSeenBy(Myself),STATE_NOT_TARGETABLE)
	!StateCheck(LastSeenBy(Myself),STATE_STONE_DEATH)
	!StateCheck(LastSeenBy(Myself),STATE_OUT_OF_ACTION)
THEN
	RESPONSE #100
        SetInterrupt(FALSE)
		SetGlobalTimer("RR#PGAZE","LOCALS",12)
		ForceSpellRES("RR#pgaze",LastSeenBy(Myself)) // Basilisk Gaze
        SetInterrupt(TRUE)
END

