!GlobalTimerNotExpired("RR#Move","LOCALS") // help -> move timer
!Allegiance(Myself,GOODCUTOFF)
OR(4)
Help([EVILCUTOFF.2]) // Great Cat are mostly solitary per pnp, they don't call but respond to hearing help cries of animals
Heard([EVILCUTOFF.2],44)
Heard([EVILCUTOFF.2],89)
Heard([EVILCUTOFF.2],68)
InMyArea(LastHelp(Myself))
!StateCheck(LastHelp(Myself),STATE_REALLY_DEAD)
THEN
RESPONSE #100
SetGlobalTimer("RR#Move","LOCALS",6)
MoveToObject(LastHelp(Myself))
END

