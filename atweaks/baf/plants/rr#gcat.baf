IF
AreaType(OUTDOOR)
!AreaType(CITY)
!AreaType(DUNGEON)
!Detect([PC])
HaveSpellRES("rr#stlth") // Hide in Shadow
!GlobalTimerNotExpired("RR#stlth","LOCALS")
!StateCheck(Myself,STATE_INVISIBLE)
THEN
RESPONSE #100
SetInterrupt(FALSE)
SetGlobalTimer("RR#stlth","LOCALS",6)
ForceSpellRES("rr#stlth",Myself) // Hide in Shadow
RemoveSpellRES("rr#stlth") // remove one instance of the spell upon casting
SetInterrupt(TRUE)
END

