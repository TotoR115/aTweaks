"newalign" = "34"                                                                  // new alignment (True Neutral)
"enforce"   = "1"                                                            	   // enforced creature 1 (uses strict PnP values)
STR_VAR                                                                            // initialize strings
"notenf01"  = ""
END                                                                                // ends FUNCTION call
