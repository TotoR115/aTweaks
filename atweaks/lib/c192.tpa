  "newmove"  = "8"                                                                 // new movement rate
END ELSE BEGIN 
  "newmove"  = "18"                                                                // new movement rate
  LAUNCH_PATCH_FUNCTION hover_immunities END                                       // grant immunities to ground-based spells
END
